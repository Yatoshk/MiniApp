FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ["MiniApp/MiniApp.csproj", "MiniApp/"]
RUN dotnet restore "MiniApp/MiniApp.csproj"
COPY . .
WORKDIR "/src/MiniApp"
RUN dotnet build "MiniApp.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "MiniApp.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "MiniApp.dll"]